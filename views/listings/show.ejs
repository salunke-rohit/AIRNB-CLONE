<% layout('layouts/boilerplate') -%>

<div class="row mt-4">
    <div class="col-8 offset-2">

<h3>Listing Details</h3>
<div class="card col-8 show-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b><br>
        <%= listing.description %><br>
        &#8377; <%= Number(listing.price).toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.county %>
    </p>
  </div>
</div>

<div class="btns">
    <a  class="btn btn-dark edit-btn"  href="/listing/<%= listing._id %>/edit">Edit</a>
<form action="/listing/<%= listing._id %>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-dark btns-1">Delete</button>
</form>
</div>
</div>
</div>